<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | NewsFeedMe</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

@if (!Request.IsAuthenticated)
{
    <body>
        <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header center-block">
                    <a class="navbar-brand" href="@Url.Action("Login", "Account")"><span>NewsFeed</span>Me</a>
                </div>
            </div><!-- /.container-fluid -->
        </nav>
        <div class="container body-content">
            @RenderBody()
        </div>
    </body>
}
@if (Request.IsAuthenticated)
{
    <body>
        <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")"><span>NewsFeed</span>Me</a>
                    <button type="button" class="btn-primary navbar-toggle" data-toggle="collapse" data-target="#sidebar"><span class="fa fa-bars large"></span></button>
                </div>
                </div>
        </nav>
        <div id="sidebar" class="sidebar">
            <ul class="nav menu">
                <li class="active"><a href="index.html"><em class="fa fa-rocket large"></em></a></li>
                <li><a href="widgets.html"><em class="fa fa-bookmark large"></em></a></li>
                <li><a href="charts.html"><em class="fa fa-cogs large"></em></a></li>
                <li><a href="@Url.Action("LogOff", "Account")"><em class="fa fa-power-off large"></em></a></li>
            </ul>
        </div><!--/.sidebar-->
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - NewsFeedMe</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
}
