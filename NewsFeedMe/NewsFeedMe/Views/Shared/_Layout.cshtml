<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | NewsFeedMe</title>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

@if (!Request.IsAuthenticated)
{
    <body>
        <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header center-block">
                    <a class="navbar-brand" href="@Url.Action("Login", "Account")"><span>NewsFeed</span>Me</a>
                </div>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
        </div>
    </body>
}
@if (Request.IsAuthenticated)
{
    <body>
        <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("Home", "Feed")"><span>NewsFeed</span>Me</a>
                    <button type="button" class="btn-primary navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar">
                        <span class="sr-only"></span>
                        <span class="fa fa-bars large"></span>
                    </button>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
        <div id="sidebar" class="sidebar collapse">
            <ul class="nav menu">
                <li id="Feed"><a href="@Url.Action("Home", "Feed")" title="My Feed"><em class="fa fa-rocket large"></em></a></li>
                <li id="Bookmarks"><a href="@Url.Action("Bookmarks", "Manage")" title="My Bookmarks"><em class="fa fa-bookmark large"></em></a></li>
                <li id="Settings"><a href="@Url.Action("Settings", "Manage")" title="Account Settings"><em class="fa fa-cogs large"></em></a></li>
                <li><a href="@Url.Action("LogOff", "Account")" title="Logout"><em class="fa fa-power-off large"></em></a></li>
            </ul>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>

        @RenderSection("scripts", required: false)
    </body>
}