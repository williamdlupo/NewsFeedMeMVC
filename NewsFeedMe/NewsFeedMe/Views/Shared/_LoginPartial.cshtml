@if (Request.IsAuthenticated)
{
    <div class="container-fluid">
        <div class="col-sm-offset-10">
            <div class="row">
                <div class="profile-userpic">
                    <img src="@String.Format("{0}", Session["ProfilePicture"])" class="img-responsive avatar avatar-xl" data-initial="???" alt="">
                </div>
                <h3 class="profile-usertitle-name text-primary"> @String.Format("{0}", User.Identity.Name)</h3>
            </div>
        </div>
    </div>
}
