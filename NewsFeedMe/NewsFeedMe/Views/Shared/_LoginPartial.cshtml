@{ 
    string picture;
    using (var context = new EntityFramework())
    {
        picture = context.Users.Where(x => x.ScreenName.Equals(User.Identity.Name)).Select(x => x.ProfilePictureURL).FirstOrDefault();
    }
}
@if (Request.IsAuthenticated)
{
    <div class="container-fluid">
        <div class="col-sm-offset-10">
            <div class="row">
                <div class="profile-userpic">
                    <img src="@String.Format("{0}", picture) " class="img-responsive avatar avatar-xl" data-initial="" alt="">
                </div>
                <h3 class="profile-usertitle-name text-primary"> @String.Format("{0}", User.Identity.Name)</h3>
            </div>
        </div>
    </div>
}
